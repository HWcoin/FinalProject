<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="spencer.cn.finalproject.MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!-- 加载图片-->
        <ImageSwitcher
            android:id="@+id/ims_switch_image"
            android:inAnimation="@android:anim/fade_in"
            android:outAnimation="@android:anim/fade_out"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <!--android:background="@mipmap/ic_launcher"-->

        </ImageSwitcher>
        <ImageView
            android:id="@+id/ims_welcome_pages"
            android:inAnimation="@android:anim/fade_in"
            android:outAnimation="@android:anim/fade_out"
            android:layout_width="match_parent"
            android:scaleType="fitXY"
            android:layout_height="match_parent"/>
    </FrameLayout>

    <!-- 切换图片按钮-->
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:background="@drawable/circle_quad_white"
            android:layout_marginBottom="16dp"
            android:id="@+id/btn_image_1"
            android:layout_width="10dp"
            android:layout_height="10dp" />

        <Button
            android:background="@drawable/circle_quad_white"
            android:layout_marginBottom="16dp"
            android:id="@+id/btn_image_2"
            android:layout_width="10dp"
            android:layout_height="10dp" />

        <Button
            android:layout_marginBottom="16dp"
            android:id="@+id/btn_image_3"
            android:background="@drawable/circle_quad_white"
            android:layout_width="10dp"
            android:layout_height="10dp" />
    </LinearLayout>


</RelativeLayout>
